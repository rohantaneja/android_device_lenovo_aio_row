# SPECTRUM KERNEL MANAGER
# Ramdisk file for profile based kernel management
# Implimentation inspired by Franco's fku profiles

# Initialization
on property:sys.boot_completed=1
   # Set default profile on first boot
   exec u:r:init:s0 root root -- /init.spectrum.sh
   exec u:r:su:s0 root root -- /init.spectrum.sh
   # Enable Spectrum support
   setprop spectrum.support 1
   # Add kernel name
   setprop persist.spectrum.kernel Daredevil

# Daredevil Balanced Profile
on property:persist.spectrum.profile=0
    # Add configs here
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_max_freq "1495000"
    write /sys/devices/system/cpu/cpu1/cpufreq/scaling_max_freq "1495000"
    write /sys/devices/system/cpu/cpu2/cpufreq/scaling_max_freq "1495000"
    write /sys/devices/system/cpu/cpu3/cpufreq/scaling_max_freq "1495000"   
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_min_freq "702000"
    write /sys/devices/system/cpu/cpu1/cpufreq/scaling_min_freq "702000"
    write /sys/devices/system/cpu/cpu2/cpufreq/scaling_min_freq "702000"
    write /sys/devices/system/cpu/cpu3/cpufreq/scaling_min_freq "702000"  
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_governor "interactive"
    write /sys/devices/system/cpu/cpu1/cpufreq/scaling_governor "interactive"
    write /sys/devices/system/cpu/cpu2/cpufreq/scaling_governor "interactive"
    write /sys/devices/system/cpu/cpu3/cpufreq/scaling_governor "interactive"

